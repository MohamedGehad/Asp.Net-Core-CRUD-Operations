@model IEnumerable<department>

@{
	ViewData["Title"] = "Index";
}


@if (TempData["Message"] is not null)
{
	
<div class=" alert alert-primary">

	@TempData["Message"] 
</div>
}

<h1>All Department</h1>

<br />
<br />
<a asp-action="Create" class="btn btn-primary my-5">Create New Department</a>

@if (Model.Count() > 0)
{
	<table class="table  table-striped table-hover">
		<thead>
			<tr>

				<td>@Html.DisplayNameFor(D => D.Code)</td>
				<td>@Html.DisplayNameFor(D =>D.Name)</td>
				<td>@Html.DisplayNameFor(D =>D.DateOfCreation)</td>
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>

			</tr>

		</thead>
		<tbody>
			@foreach (var dept in Model)
			{
				<tr class="table table-striped">
					<td>@dept.Code</td>
					<td>@dept.Name</td>
					<td>@dept.DateOfCreation</td>




					<td>
						<a asp-controller="Department" asp-action="Details" asp-route-id="@dept.Id" class="btn btn-warning">
							<i class=" fas fa-eye"></i> Details
						</a>

					</td>
					<td>

						<a asp-controller="Department" asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-success">
							<i class=" fas fa-Edit"></i> Update
						</a>
					</td>
					<td>
						<a asp-controller="Department" asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-denger">
							<i class=" fas fa-trash"></i> Delete

						</a>
					</td>


					@*<partial name="_ButtonsPartiolView" model="@department." />*@
 

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-warning mt-4">
		<h3>There is No Departments</h3>
	</div>
}
