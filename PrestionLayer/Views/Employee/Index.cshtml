<a asp-action="Create" class="btn btn-primary my-5">Create New Department</a>

<div class = "row justify-content-center align-aitems-center mt-5">
	<form asp-action="Index" class="row col-8 offset-1">
		<div class="col-8">
			<input  type="text" class=" form-control" name="Searchvalue" placeholder="Search By Name"/>
		</div>
		<div class="col-4">
			<input type="submit" value="Search" class="btn btn-success" />
		</div>
	</form>

</div>

@if (Model.Count() > 0)
{
	<table class="table  table-striped table-hover">
		<thead>
			<tr>

				<td>@Html.DisplayNameFor(D => D.Name)</td>
				<td>@Html.DisplayNameFor(D =>D.Age)</td>
				<td>@Html.DisplayNameFor(D =>D.Address)</td>
				<td>@Html.DisplayNameFor(D =>D.Image)</td>
				<td>@Html.DisplayNameFor(D =>D.department)</td>
				<td>@Html.DisplayNameFor(D =>D.Salary)</td>
				<td>@Html.DisplayNameFor(D =>D.IsActive)</td>
				<td>@Html.DisplayNameFor(D =>D.Phone)</td>
				<td>@Html.DisplayNameFor(D =>D.Email)</td>
				<td>@Html.DisplayNameFor(D =>D.HairDate)</td>
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>

			</tr>

		</thead>
		<tbody>
			@foreach (var Emp in Model)
			{
				<tr class="table table-striped">
					<td>@Emp.Name</td>
					<td>@Emp.Age</td>
					<td>@Emp.Address</td>
					<td><img  src="~/files/imges/@Emp.imageName" class="img-fluid rounded" alt="imge1" height="30" width="30"   /></td>
					@*<td>@Emp.department.Name</td>*@
					<td>@Html.DisplayFor(M =>@Emp.department.Name)</td>
					   
					<td>@Html.DisplayFor(M =>@Emp.Salary)</td>
					@*<td>@Emp.IsActive</td>*@
					<td>@Html.DisplayFor(M =>Emp.IsActive)</td>
					<td>@Emp.Phone</td>
					<td>@Html.DisplayFor(M =>@Emp.Email)</td>
					<td>@Emp.HairDate</td>

					<partial name="_ButtonsPartiolView" model="@Emp.Id"/> 

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-warning mt-4">
		<h3>There is No Departments</h3>
	</div>
}
